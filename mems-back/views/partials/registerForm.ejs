<div class="row justify-content-center">
    <div class="col-lg-6 px-5">
        <form class="p-3" method="POST" action="/register" autocomplete="off">
            <div class="form-group">
                <label for="login">Login:</label>
                <input id="login" class="form-control" type="text" name="login" autocomplete="off" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input id="password" class="form-control" type="password" name="password" autocomplete="new-password" required>
            </div>
            <div class="form-group">
                <label for="password-repeat">Repeat the Password:</label>
                <input id="password-repeat" class="form-control" type="password" name="password-repeat" autocomplete="new-password" required>
            </div>
            <input class="btn btn-primary" type="submit" value="Register">
        </form>
    </div>
</div>
